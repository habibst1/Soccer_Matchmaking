                                    <select style="padding-top: 10px;height: calc(4.5rem + -26px)!important;" asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                        <option disabled selected class="text-muted">Select Role</option>
                            </select>
                        </div>
                                <button id="registerSubmit" type="submit" class="register-btn">Register</button>
