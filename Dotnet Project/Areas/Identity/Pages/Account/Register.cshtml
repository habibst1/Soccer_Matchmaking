    <div class="container" style="margin-block:70px;display: flex;justify-content: center;">
        <main role="main" class="pb-3" style="width: 40%;">
            <div class="card shadow border-0 " style="border-radius: 22px;">
                <div class="card-header bg-gradient" style="background-color: var(--color3);border-radius: 10px 10px 0 0;">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Register</h2>
            </div>
        </div>
    </div>
                <div class="card-body p-4" style="background-color: var(--color1);border-radius: 0 0 10px 10px;">
        <div class="row">
                <div class="col-md-12">
                    <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <h3 class="border-bottom pb-3 text-secondary text-center" style="margin-bottom: 1rem!important;">Create a new account.</h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating col-md-12" style="margin-bottom: 9px;">
                                    <input asp-for="Input.Email" class="form-control" style="height: calc(4.5rem + -26px)!important;" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email" class="ms-2 text-muted" style="padding: 9px.75rem!important;">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating col-md-6" style="margin-bottom: 9px;">
                                    <input asp-for="Input.Password" class="form-control" style="height: calc(4.5rem + -26px)!important;" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password" class="ms-2 text-muted" style="padding: 9px.75rem!important;">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating col-md-6" style="margin-bottom: 9px;">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" style="height: calc(4.5rem + -26px)!important;" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted" style="padding: 9px.75rem!important;">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating col-md-6" style="margin-bottom: 9px;">
                                    <input asp-for="Input.Name" class="form-control" style="height: calc(4.5rem + -26px)!important;" placeholder="Davies" />
                        <label asp-for="Input.Name" class="ms-2 text-muted" style="padding: 9px.75rem!important;">Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating col-md-6" style="margin-bottom: 9px;">
                        <input asp-for="Input.Surname" class="form-control" style="height: calc(4.5rem + -26px)!important;" placeholder="Alain" />
                        <label asp-for="Input.Surname" class="ms-2 text-muted" style="padding: 9px.75rem!important;">Surname</label>
                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating col-md-6" style="margin-bottom: 9px;">
                        <input asp-for="Input.PhotoPath" class="form-control" style="height: calc(4.5rem + -26px)!important;" placeholder="img.jpg" />
                        <label asp-for="Input.PhotoPath" class="ms-2 text-muted" style="padding: 9px.75rem!important;">Photo Path</label>
                        <span asp-validation-for="Input.PhotoPath" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating col-md-6" style="margin-bottom: 9px;">
                        <input asp-for="Input.PhoneNumber" class="form-control" style="height: calc(4.5rem + -26px)!important;" placeholder="99001002" />
                        <label asp-for="Input.PhoneNumber" class="ms-2 text-muted" style="padding: 9px.75rem!important;">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating col-md-6" style="margin-bottom: 9px;">
                        <input asp-for="Input.Adress" class="form-control" style="height: calc(4.5rem + -26px)!important;" placeholder="Tunis" />
                        <label asp-for="Input.Adress" class="ms-2 text-muted" style="padding: 9px.75rem!important;">Adress</label>
